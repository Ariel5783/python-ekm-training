---
const siteMode = import.meta.env.PUBLIC_SITE_MODE || 'student';
const isTeacher = siteMode === 'teacher';
---

<nav class="bg-slate-900 border-b border-slate-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo et titre -->
      <a href="/" class="flex items-center space-x-3">
        <img 
          src="/images/logo-ekm-conseils-v02.png" 
          alt="EKM Conseils" 
          class="h-10 w-auto"
        />
        <div class="flex flex-col">
          <span class="text-white font-bold text-lg">Python</span>
          <span class="text-cyan-400 text-xs">by EKM Conseils</span>
        </div>
      </a>

      <!-- Navigation principale -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/cours" class="text-gray-300 hover:text-white transition-colors">
          Cours
        </a>
        <a href="/exercices" class="text-gray-300 hover:text-white transition-colors">
          Exercices
        </a>
        <a href="/projets" class="text-gray-300 hover:text-white transition-colors">
          Projets
        </a>
        <a href="/methodologie" class="text-gray-300 hover:text-white transition-colors">
          Méthodologie
        </a>
        
        {isTeacher && (
          <>
            <a href="/solutions" class="text-amber-400 hover:text-amber-300 transition-colors">
              Solutions
            </a>
            <a href="/pedagogie" class="text-amber-400 hover:text-amber-300 transition-colors">
              Pédagogie
            </a>
          </>
        )}
        
        <a href="/a-propos" class="text-gray-300 hover:text-white transition-colors">
          À propos
        </a>
        
        {isTeacher && (
          <span class="px-3 py-1 bg-amber-500 text-slate-900 text-xs font-semibold rounded-full">
            Espace Professeurs
          </span>
        )}
      </div>
    </div>
  </div>
</nav>