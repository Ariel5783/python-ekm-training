---
interface Props {
  title?: string;
}

const { title = 'Corrigé' } = Astro.props;

// Vérifier si on est en mode professeur via la variable d'environnement
const isTeacherMode = import.meta.env.PUBLIC_SITE_MODE === 'teacher';
---

{isTeacherMode ? (
  <div class="teacher-only-content" data-teacher-only>
    <div class="bg-yellow-50 dark:bg-yellow-900/20 border-2 border-yellow-300 dark:border-yellow-800 rounded-lg p-6 my-6">
      <div class="flex items-start mb-4">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-lg font-semibold text-yellow-900 dark:text-yellow-100">
            {title} (Mode Professeur)
          </h3>
          <p class="text-sm text-yellow-800 dark:text-yellow-200 mt-1">
            Ce contenu est visible uniquement en mode professeur.
          </p>
        </div>
      </div>
      <div class="prose prose-sm dark:prose-invert max-w-none">
        <slot />
      </div>
    </div>
  </div>
) : null}
