---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const coursEntries = await getCollection('cours');
const coursSorted = coursEntries.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
---

<BaseLayout title="Cours Python - Python by EKM Conseils">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- En-tête -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-slate-900 mb-4">
        Cours Python
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl">
        Un parcours structuré pour maîtriser Python progressivement
      </p>
    </div>

    <!-- Liste des cours -->
    {coursSorted.length > 0 ? (
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {coursSorted.map((cours, index) => (
          <a 
            href={`/cours/${cours.slug}`}
            class="group bg-white rounded-xl p-6 border-2 border-slate-200 hover:border-cyan-500 hover:shadow-lg transition-all"
          >
            <!-- Numéro du cours -->
            <div class="flex items-center justify-between mb-4">
              <span class="text-3xl font-bold text-slate-200 group-hover:text-cyan-100">
                {String(index + 1).padStart(2, '0')}
              </span>
              {cours.data.difficulty && (
                <span class={`px-3 py-1 text-xs font-semibold rounded-full ${
                  cours.data.difficulty === 'débutant' ? 'bg-green-100 text-green-800' :
                  cours.data.difficulty === 'intermédiaire' ? 'bg-yellow-100 text-yellow-800' :
                  'bg-red-100 text-red-800'
                }`}>
                  {cours.data.difficulty}
                </span>
              )}
            </div>

            <!-- Titre et description -->
            <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-cyan-600 transition-colors">
              {cours.data.title}
            </h3>
            
            {cours.data.description && (
              <p class="text-gray-600 mb-4 line-clamp-3">
                {cours.data.description}
              </p>
            )}

            <!-- Meta informations -->
            <div class="flex items-center justify-between text-sm text-gray-500">
              {cours.data.duration && (
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {cours.data.duration}
                </div>
              )}
              
              <span class="text-cyan-600 group-hover:text-cyan-700 font-semibold">
                Voir le cours →
              </span>
            </div>

            <!-- Tags -->
            {cours.data.tags && cours.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mt-4">
                {cours.data.tags.slice(0, 3).map(tag => (
                  <span class="px-2 py-1 bg-slate-100 text-slate-700 text-xs rounded">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </a>
        ))}
      </div>
    ) : (
      <div class="bg-slate-50 rounded-xl p-12 text-center border-2 border-dashed border-slate-300">
        <p class="text-gray-600 text-lg">
          Les cours seront disponibles prochainement.
        </p>
      </div>
    )}
  </div>
</BaseLayout>