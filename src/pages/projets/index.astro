---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const projetsEntries = await getCollection('projets');
const projetsSorted = projetsEntries.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
---

<BaseLayout title="Projets Python - Python by EKM Conseils">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- En-tête -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-slate-900 mb-4">
        Projets Python
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl">
        Applications réelles et complètes pour valider vos acquis
      </p>
    </div>

    <!-- Liste des projets -->
    {projetsSorted.length > 0 ? (
      <div class="grid gap-8 md:grid-cols-2">
        {projetsSorted.map((projet, index) => (
          <a 
            href={`/projets/${projet.slug}`}
            class="group bg-white rounded-xl p-8 border-2 border-slate-200 hover:border-cyan-500 hover:shadow-xl transition-all"
          >
            <!-- Numéro du projet -->
            <div class="flex items-center justify-between mb-6">
              <span class="text-5xl font-bold text-slate-200 group-hover:text-cyan-100">
                {String(index + 1).padStart(2, '0')}
              </span>
              {projet.data.difficulty && (
                <span class={`px-4 py-2 text-sm font-semibold rounded-full ${
                  projet.data.difficulty === 'débutant' ? 'bg-green-100 text-green-800' :
                  projet.data.difficulty === 'intermédiaire' ? 'bg-yellow-100 text-yellow-800' :
                  'bg-red-100 text-red-800'
                }`}>
                  {projet.data.difficulty}
                </span>
              )}
            </div>

            <!-- Titre et description -->
            <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-cyan-600 transition-colors">
              {projet.data.title}
            </h3>
            
            {projet.data.description && (
              <p class="text-gray-600 mb-6 line-clamp-4">
                {projet.data.description}
              </p>
            )}

            <!-- Meta informations -->
            <div class="flex items-center justify-between text-sm text-gray-500 mb-6">
              {projet.data.duration && (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {projet.data.duration}
                </div>
              )}
              
              <span class="text-cyan-600 group-hover:text-cyan-700 font-semibold flex items-center">
                Découvrir le projet
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>

            <!-- Tags -->
            {projet.data.tags && projet.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {projet.data.tags.slice(0, 4).map(tag => (
                  <span class="px-3 py-1 bg-slate-100 text-slate-700 text-sm rounded">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </a>
        ))}
      </div>
    ) : (
      <div class="bg-slate-50 rounded-xl p-12 text-center border-2 border-dashed border-slate-300">
        <p class="text-gray-600 text-lg">
          Les projets seront disponibles prochainement.
        </p>
      </div>
    )}
  </div>
</BaseLayout>